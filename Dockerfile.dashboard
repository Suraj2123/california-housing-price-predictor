FROM python:3.11-slim

WORKDIR /app

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY pyproject.toml .
COPY src ./src
RUN pip install --no-cache-dir -e .

COPY app ./app

EXPOSE 8501
CMD ["sh", "-c", "streamlit run app/dashboard_app.py --server.address 0.0.0.0 --server.port ${PORT:-8501}"]
